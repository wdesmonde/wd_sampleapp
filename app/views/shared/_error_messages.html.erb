<% if object.errors.any? %>
  <div id="error_explanation">
    <h2>
      Could not save <%= object.class.to_s.underscore.humanize.downcase %><br />
      <%= pluralize(object.errors.count, "error") %></h2>
    <p>Problems:</p>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %> 
